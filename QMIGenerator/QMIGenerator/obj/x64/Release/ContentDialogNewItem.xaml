<ContentDialog x:ConnectionId='1'
    x:Class="QMIGenerator.ContentDialogNewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QMIGenerator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create New Item"
    PrimaryButtonText="Create"
    SecondaryButtonText="Cancel"
                                                         
                                                             
    Width="{Binding Width, Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}"
    >

    <Grid Height="auto" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="TextBlockName" TextWrapping="Wrap" Text="Name:" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" />
        <TextBlock x:ConnectionId='3' x:Name="TextBlockWidth" TextWrapping="Wrap" Text="Width(cm):" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="2" />
        <TextBlock x:ConnectionId='4' x:Name="TextBlockLength" TextWrapping="Wrap" Text="Length(cm):" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="4"/>
        <TextBlock x:ConnectionId='5' x:Name="TextBlockWeight" TextWrapping="Wrap" Text="Weight(kg):" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="6"/>
        <TextBlock x:ConnectionId='6' x:Name="TextBlockHeight" TextWrapping="Wrap" Text="Height(cm):" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="8"/>
        <TextBox x:ConnectionId='7' x:Name="textBoxName" Grid.Column="2" TextWrapping="Wrap"/>
        <TextBox x:ConnectionId='8' x:Name="textBoxWidth" Grid.Column="2" TextWrapping="Wrap" Grid.Row="2"/>
        <TextBox x:ConnectionId='9' x:Name="textBoxLength" Grid.Column="2" TextWrapping="Wrap" Grid.Row="4"/>
        <TextBox x:ConnectionId='10' x:Name="textBoxWeight" Grid.Column="2" TextWrapping="Wrap" Grid.Row="6"/>
        <TextBox x:ConnectionId='11' x:Name="textBoxHeight" Grid.Column="2" TextWrapping="Wrap" Grid.Row="8"/>
    </Grid>
</ContentDialog>

