<UserControl
    x:Class="QMIGenerator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QMIGenerator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/bg.png"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' Style="{StaticResource ResourceKey=MyCustomButton}" x:Name="button_Copy" VerticalAlignment="Center" HorizontalAlignment="Center" Height="71" Width="76" Grid.Column="1">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="Assets/Layers.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='2' Style="{StaticResource ResourceKey=MyCustomButton}" x:Name="button_Copy1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="71" Width="76">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="Assets/Home.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='3' Style="{StaticResource ResourceKey=MyCustomButton}" x:Name="button" VerticalAlignment="Center" HorizontalAlignment="Center" Height="71" Width="76" Grid.Column="2">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="Assets/3d.png"/>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</UserControl>

